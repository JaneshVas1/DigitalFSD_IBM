<%- include('includes/head.ejs') %>
<link rel='stylesheet' href='/stylesheets/common.css' />
    <!--<link rel='stylesheet' href='/stylesheets/style.css' />-->
  </head>
<script type="text/javascript" src="/javascripts/common.js"></script>
  <body class="container">
  <%- include('includes/nav.ejs') %>
    <h1>Welcome to Pixogram application</h1>
  <p><%= data.token %></p>
  <% if (!!data.customer) { %>
    <!--<h1>Welcome <%= data.customer %></h1>-->
    <% data.customer.forEach(function(cust) { %>

    <div>
      <img src="data:image/<%=cust.profilepic.contentType%>;base64,
                     <%=cust.profilepic.imgdata.toString('base64')%>" width="300" height="250">
      <div>
        <p><%= cust.firstname %></p>
        <p><%= cust.lastname %></p>




        <button onClick="getFollowers()" >Get Followers </button>

        <button onClick="addFollowers()" >Add Followers </button>
        <button onClick="getUsers()" >All Users </button>
        <button onClick="addFollowers(<% if (data.token) { %>'jwt <%= data.token %>'<% }%>)">Add Followers </button>
        <button onClick="deleteFollowers()">Delete Followers </button>



      </div>
    </div>

  <% })
  }
  %>
   </body>








</html>
